
<% block('localCss', '<link rel="stylesheet" href="/vendors/mdi/css/materialdesignicons.min.css">') %>
<% block('localCss', '<link rel="stylesheet" href="/vendors/css/vendor.bundle.base.css">') %>
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
              <div class="brand-logo">
                <a href="/">
                  <img src="/images/logo.png" alt="logo">
                </a>
               
              </div>
              <h4>Đăng nhập</h4>
              <form class="pt-3" id="frmLogin" data-toggle="validator" role="form">
                <div class="form-group">
                  <label for="exampleInputEmail">E-mail</label>
                  <div class="input-group">
                    <div class="input-group-prepend bg-transparent">
                      <span class="input-group-text bg-transparent border-right-0">
                        <i class="mdi mdi-account-outline text-primary"></i>
                      </span>
                    </div>
                    <input class="form-control form-control-lg border-left-0" id="txtEmail" name="emailAddress" type="email" placeholder="E-mail"
                    data-email-error="<%= __('Vui lòng nhập đúng thông tin của email.') %>"
                    data-required-error="<%= __('Vui lòng nhập e-mail.') %>" required>
                  </div>
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword">Mật khẩu</label>
                  <div class="input-group">
                    <div class="input-group-prepend bg-transparent">
                      <span class="input-group-text bg-transparent border-right-0">
                        <i class="mdi mdi-lock-outline text-primary"></i>
                      </span>
                    </div>
                    <input class="form-control form-control-lg border-left-0" id="txtPassword" name="password" type="password" placeholder="Mật khẩu"
                    data-required-error="<%= __('Vui lòng nhập mật khẩu.') %>" required>                        
                  </div>
                </div> 
                <div class="alert alert-danger hidden" role="alert">
                  <p class="text-center"><i class="mdi mdi-alert-circle"></i>Sai email hoặc mật khẩu</p>  
                </div>
                <div class="my-3">
                  <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Đăng nhập</button>
                </div>
                <div class="text-center mt-4 font-weight-light">
                  <a href="/backend/password/forgot" class="auth-link text-black">Quên mật khẩu?</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
<% block('localScripts', '<script src="/vendors/js/vendor.bundle.base.js"></script>') %>